{right_arm_hand_inner_front_posY} -= 5.99{part3}
{right_arm_hand_inner_front_posZ} += 0.99{part2}
{right_arm_hand_outer_back_posX} += 0.99{part2}
{right_arm_hand_outer_back_posY} -= 5.99{part3}
{right_arm_hand_outer_back_posZ} -= 0.99{part2}
{right_arm_hand_outer_front_posX} += 0.99{part2}
{right_arm_hand_outer_front_posY} -= 5.99{part3}
{right_arm_hand_outer_front_posZ} += 0.99{part2}
{right_arm_cannon_inner_front_panel_rotY} -= 90'{part1}
{right_arm_cannon_outer_front_panel_rotY} += 90'{part1}
{right_arm_cannon_inner_back_panel_rotY} += 90'{part1}
{right_arm_cannon_outer_back_panel_rotY} -= 90'{part1}
{right_arm_cannon_outer_front_panel_posZ} += 2{part2}
