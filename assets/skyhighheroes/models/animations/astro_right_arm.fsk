{right_arm_cannon_inner_front_panel_posZ} += 2{part2}
{right_arm_cannon_inner_back_panel_posZ} -= 2{part2}
{right_arm_cannon_outer_panel_posY} -= 4{part3}
{right_arm_cannon_inner_panel_posY} -= 4{part3}
{right_arm_cannon_outer_panel_posX} += 0.1{part3}
