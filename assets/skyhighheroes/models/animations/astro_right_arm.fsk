{part2} = if({total} != 1, animate2({total}, 0.8, 0.2, 0.1, 0.0), 1)
{part2_fast} = if({total} != 1, animate2({total}, 0.8, 0.3, 0.4, 0.0), 1)
{part3} = if({total} != 1, animate2({total}, 0.8, 0.6, 0.4, 0.0), 1)

{right_arm_hand_inner_back_posX} -= 0.99{part2}
{right_arm_hand_inner_back_posY} -= 5.99{part3}
